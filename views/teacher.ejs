<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teacher's Page</title>
  </head>
  <body>
    <h1>Teachers Data</h1>
    <h3><a href="/teacher/add">add teacher</a></h3>
    <table style="width:80%" border="1">
      <tr>
        <th>No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Options</th>
      </tr>
      <% for(let i in teacherData) { %>
      <tr>
        <td><%= teacherData[i].id %></td>
        <td><%= teacherData[i].first_name %></td>
        <td><%= teacherData[i].last_name %></td>
        <td><%= teacherData[i].email %></td>
        <td><a href=" /teacher/edit/<%= teacherData[i].id %>">Edit</a> | <a href="/teacher/delete/<%= teacherData[i].id %>" onclick="return confirm('Delete this teacher?')"> Delete </a></td>
      </tr>
      <% } %>
    </table>
    <p><a href="/">Back</a></p>
  </body>
</html>
