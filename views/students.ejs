<%- include ./header.ejs %>

<div class="container">
  <h2>Student Data</h2>
<h3><a href="/student/add">add student</a></h3>
  <table class="table">
    <thead>
      <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Options</th>
      </tr>
    </thead>
    <tbody>
            <% students.forEach(function(student){ %>
                <tr>
                    <td>
                        <%= student.id %>
                    </td>
                    <td>
                        <%= student.first_name %>
                    </td>
                    <td>
                        <%= student.last_name%>
                    </td>
                    <td>
                        <%= student.email%>
                    </td>
                    <td>
                        <a href="/student/edit/<%= student.id%>">Edit</a>
                    </td>
                    <td>
                        <a href="/student/delete/<%= student.id%>" onclick="return confirm('delete this student?')")>Delete</a>
                    </td>
                </tr>
                <% }) %>
    </tbody>
  </table>
</div>

<%- include ./footer.ejs%>
