<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Student</title>
    <style>
        header{
            text-align: center;
            padding-bottom: 10px;
        }
        table, th,td {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        th, td{
            padding: 10px;
        }

        input[type=submit] {
            background-color: #4CAF50;
            color: white;
            padding: 8px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <h1>Stundent Data</h1>
        <a href="students/add"><input type="submit" value="add student" /></a>
    </header>
    <main>
        <table style="width:100%">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th colspan="2">Option</th>
                </tr>
            </thead>
            <tbody>
                <% studentData.forEach(function(dataStudent) { %>
                <tr>
                    <td><%= dataStudent.first_name %></td>
                    <td><%= dataStudent.last_name %></td>
                    <td><%= dataStudent.email %></td>
                    <td><a href="students/edit/<%= dataStudent.id %>">Edit</a></td>
                    <td><button onclick="deleted(<%= dataStudent.id %>)">Delete</button></td>
                </tr>
                <%  }) %>
            </tbody>
        </table>
    </main>
    <script type="text/javascript">
        function deleted(id) {
          let confirm = window.confirm("Delete this student?");
          if (confirm) {
            document.location.href = `/students/delete/${id}`
          }
        }
    </script>
</body>
</html>